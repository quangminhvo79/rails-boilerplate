<div>
  <%= link_to root_path do %>
    <%= image_tag asset_path('logo.svg'), class: 'mx-auto h-10 w-auto bg-primary-600 p-2 rounded' %>
  <% end %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
</div>

<% if flash[:alert] %>
  <div class="bg-red-200 py-1 px-2" data-controller="notification">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="-space-y-px rounded-md shadow-sm mt-8 space-y-6">
    <div>
      <%= f.email_field :email, autofocus: true, class: "textfield rounded-t-md", placeholder: 'Email' %>
      <%= f.password_field :password, class: "textfield rounded-b-md", placeholder: 'Password' %>
    </div>

    <div class="flex items-center justify-between">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-600" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-primary-600 hover:text-primary-500 text-sm" %>
      <% end %>
    </div>

    <div class="actions space-y-2">
      <%= f.submit "Log in", class: "group btn-primary w-full" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
